# Hentikan skrip jika ada error
# set -e

# Kosongkan layar
clear

# =============================================
#           [ Konfigurasi Warna ]
# =============================================
export RED='\033[0;31m'
export GREEN='\033[0;32m'
export YELLOW='\033[0;33m'
export BLUE='\033[0;34m'
export CYAN='\033[0;36m'
export NC='\033[0m'
export ORANGE='\033[0;91m'
export WH='\033[1;37m'
biji=`date +"%Y-%m-%d" -d "$dateFromServer"`
colornow=$(cat /etc/julak/theme/color.conf)
NC="\e[0m"
RED="\033[0;31m"
COLOR1="$(cat /etc/julak/theme/$colornow | grep -w "TEXT" | cut -d: -f2|sed 's/ //g')"
COLBG1="$(cat /etc/julak/theme/$colornow | grep -w "BG" | cut -d: -f2|sed 's/ //g')"

# =============================================
#           [ Fungsi Pengecekan Lisensi ]
# =============================================
check_ip_and_get_info() {
    local ip_to_check=$1
    # Variabel permission_file harus sudah ada secara global
    while IFS= read -r line; do
        # Hapus karakter aneh dan spasi berlebih
        line=$(echo "$line" | tr -d '\r' | sed 's/[^[:print:]]//g' | xargs)
        
        #lewati baris kosong
        [ -z "$line" ] && continue

        # Split baris menjadi array
        read -ra fields <<< "$line"

        # Cek jika kolom ke-4 (index 3) adalah IP yang dicari
        if [[ "${fields[3]}" == "$ip_to_check" ]]; then
            client_name="${fields[1]}"  # Kolom 2
            exp_date="${fields[2]}"     # Kolom 3
            return 0 # Sukses, IP ditemukan
        fi
    done <<< "$permission_file"
    
    return 1 # Gagal, IP tidak ditemukan
}

# =============================================
#           [ Proses Utama ]
# =============================================

# Ambil data lisensi dari GitHub dengan timeout
echo -e "${GREEN}âŒ› Mengambil data lisensi...${NC}"
permission_file=$(curl -sL --connect-timeout 10 https://github.com/cibut2d/reg/raw/refs/heads/main/ip)

# Validasi file permission
if [ -z "$permission_file" ]; then
echo -e "${PURPLE}â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”${NC}"
echo -e "${RED}ğŸ›‘  ${YELLOW}AKSES DITOLAK!${NC} ${RED}Script Bot Telegram ini hanya untuk${NC} ${CYAN}ğŸ” PEMILIK & PEMBELI RESMI Genom Pro${NC}"
echo -e "${BLUE}ğŸ’¡  Ingin menikmati fitur lengkap seperti${NC} ${GREEN}ğŸ§  Auto-response${NC}, ${GREEN}âš™ï¸ Multi-tools${NC}, dan ${GREEN}ğŸ“Š Statistik pintar${NC}?"
echo -e "${YELLOW}ğŸš€  Segera aktifkan Admin Pro sekarang dan buka semua fitur premium-nya!${NC}"
echo -e "${PURPLE}â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”${NC}"

    exit 1
fi

# Ambil IP VPS
IP_VPS=$(curl -s --connect-timeout 5 ipv4.icanhazip.com)

# Lakukan pengecekan lisensi
echo -e "${GREEN}âŒ› Memeriksa lisensi untuk IP: $IP_VPS...${NC}"
if check_ip_and_get_info "$IP_VPS"; then
    # Validasi format tanggal
    if ! [[ "$exp_date" =~ ^[0-9]{4}-(0[1-9]|1[0-2])-(0[1-9]|[12][0-9]|3[01])$ ]]; then
        echo -e "${RED}âŒ Format tanggal di file lisensi salah: '$exp_date' (seharusnya YYYY-MM-DD)${NC}"
        exit 1
    fi

    # Hitung sisa masa aktif
    current_epoch=$(date +%s)
    exp_epoch=$(date -d "$exp_date" +%s)

    if (( exp_epoch < current_epoch )); then
        echo -e "${RED}âŒ Lisensi Anda telah habis pada tanggal $exp_date!${NC}"
        exit 1
    fi
    days_remaining=$(( (exp_epoch - current_epoch) / 86400 ))
    echo -e "${GREEN}âœ… Lisensi valid. Sisa masa aktif: $days_remaining hari.${NC}"
    sleep 2
else
    echo -e "${RED}âŒ IP tidak terdaftar!${NC}"
    echo -e "â¥ Hubungi admin ${CYAN}ã€Œ âœ¦ @JulakBantur âœ¦ ã€${NC}"
    echo -e "â¥ WhatsApp Number ${CYAN}ã€Œ âœ¦ +6281250851741 âœ¦ ã€${NC}"
    exit 1
fi

# =============================================
#           [ Fungsi Tampilan Menu ]
# =============================================
show_main_menu() {
    clear
    # --- PENGUMPULAN DATA SISTEM ---
    MODEL2=$(cat /etc/os-release | grep -w PRETTY_NAME | head -n1 | sed 's/[=PRETTY_NAME"]//g')
    LOADCPU=$(printf '%-0.1f' "$(top -bn1 | awk '/Cpu/ { print 100 - $8 }')")
    CORE=$(nproc)
    tram=$(free -h | awk '/Mem:/ {print $2}')
    uram=$(free -h | awk '/Mem:/ {print $3}')
    ISP=$(curl -s ipinfo.io/org?token=5c0c0745019c34 | cut -d " " -f 2-10 )
    CITY=$(curl -s ipinfo.io/city?token=5c0c0745019c34 )
    SERONLINE=$(uptime -p | cut -d " " -f 2-)

    # --- STATUS SERVICE ---
    # Xray
    if systemctl is-active --quiet xray; then status_xray="${COLOR1}ON${NC}"; else status_xray="${RED}OFF${NC}"; fi
    # Nginx
    if systemctl is-active --quiet nginx; then status_nginx="${COLOR1}ON${NC}"; else status_nginx="${RED}OFF${NC}"; fi
    # Dropbear
    if /etc/init.d/dropbear status >/dev/null 2>&1; then status_beruangjatuh="${COLOR1}ON${NC}"; else status_beruangjatuh="${RED}OFF${NC}"; fi
    # SSH WS
    if systemctl is-active --quiet ws-stunnel; then status_ws="${COLOR1}ON${NC}"; else status_ws="${RED}OFF${NC}"; fi
    # Bot Telegram
    if systemctl is-active --quiet julak-bot.service; then status_bot="${COLOR1}ON${NC}"; else status_bot="${RED}OFF${NC}"; fi

    # --- TAMPILAN PANEL & MENU ---
    echo -e "$COLOR1â•­â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•®${NC}"
    echo -e "$COLOR1â”‚${NC} ${WH}            â€¢ JULAK BOT TELEGRAM PRO â€¢           ${NC} $COLOR1â”‚${NC}"
    echo -e "$COLOR1â•°â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•¯${NC}"
    echo -e "$COLOR1â•­â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•®${NC}"
    echo -e "$COLOR1â”‚${NC} ${WH}Client Name${NC}    : ${COLOR1}$client_name${NC}"
    echo -e "$COLOR1â”‚${NC} ${WH}Days Remaining${NC} : ${COLOR1}$days_remaining hari${NC}"
    echo -e "$COLOR1â”œâ”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”¤${NC}"
    echo -e "$COLOR1â”‚${NC} ${WH}System OS${NC}      : ${COLOR1}$MODEL2${NC}"
    echo -e "$COLOR1â”‚${NC} ${WH}Memory Usage${NC}   : ${COLOR1}$uram / $tram${NC}"
    echo -e "$COLOR1â”‚${NC} ${WH}CPU Usage${NC}      : ${COLOR1}$LOADCPU% (${CORE} Core)${NC}"
    echo -e "$COLOR1â”‚${NC} ${WH}ISP / City${NC}     : ${COLOR1}$ISP / $CITY${NC}"
    echo -e "$COLOR1â”‚${NC} ${WH}Domain${NC}         : ${COLOR1}$(cat /etc/xray/domain 2>/dev/null || echo "Not Set")${NC}"
    echo -e "$COLOR1â”‚${NC} ${WH}IP-VPS${NC}         : ${COLOR1}$IP_VPS${NC}"
    echo -e "$COLOR1â”‚${NC} ${WH}Uptime${NC}         : ${COLOR1}$SERONLINE${NC}"
    echo -e "$COLOR1â•°â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•¯${NC}"
    
    # --- PANEL STATUS SERVER BY JULAKVPN ---
    echo -e "$COLOR1â•”â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•—${NC}"
    echo -e "$COLOR1â•‘${NC}       ğŸš€   ${WH}S T A T U S   S E R V E R${NC}   ğŸš€          ${COLOR1}â•‘${NC}"
    echo -e "$COLOR1â• â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•£${NC}"
    echo -e "$COLOR1â•‘${WH}ğŸŒWS:$status_ws |${WH}âš¡XRAY:$status_xray |${WH}ğŸ–¥ï¸NGINX:$status_nginx |${WH}ğŸ”’DB:$status_beruangjatuh |${WH}ğŸ¤–BOT:$status_bot ${COLOR1} â•‘${NC}"
    echo -e "$COLOR1â•šâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•${NC}"

    # --- MENU UTAMA BARU ---
    echo -e "$COLOR1â•­â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•®${NC}"
    echo -e "$COLOR1â”‚                   ${WH}MENU UTAMA${NC}                      ${COLOR1}â”‚${NC}"
    echo -e "$COLOR1â”œâ”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”¤${NC}"
    echo -e "$COLOR1â”‚ ${WH}[${COLOR1}01${WH}]${NC} ${COLOR1}â€¢ ${WH}Install Bot SSH & XRAY${NC}   ${WH}[${COLOR1}04${WH}]${NC} ${COLOR1}â€¢ ${WH}Setting${NC}    ${COLOR1}â”‚${NC}"
    echo -e "$COLOR1â”‚ ${WH}[${COLOR1}02${WH}]${NC} ${COLOR1}â€¢ ${WH}Cek Status Bot${NC}           ${WH}[${COLOR1}05${WH}]${NC} ${COLOR1}â€¢ ${WH}Info VPS${NC}   ${COLOR1}â”‚${NC}"
    echo -e "$COLOR1â”‚ ${WH}[${COLOR1}03${WH}]${NC} ${COLOR1}â€¢ ${WH}Restart Layanan Bot${NC}      ${WH}[${COLOR1}00${WH}]${NC} ${COLOR1}â€¢ ${WH}Menu${NC}       ${COLOR1}â”‚${NC}"
    echo -e "$COLOR1â•°â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•¯${NC}"
    echo -ne "  ${WH}Masukkan pilihan Anda [0-5]: ${NC}"
}

# =============================================
#           [ Loop Menu Utama ]
# =============================================
while true; do
    show_main_menu
    read -r choice
    
    case $choice in
        1)
            echo -e "\n${YELLOW}Mempersiapkan instalasi Bot Telegram...${NC}"
            cd /root
            rm -f install-boot
            wget -q https://sc1.julak.web.id/install-boot && chmod +x install-boot && ./install-boot
            read -n 1 -s -r -p "Instalasi selesai. Tekan tombol apa saja untuk kembali..."
            ;;
        2)
            echo -e "\n${YELLOW}Mengecek status Bot Telegram...${NC}"
            systemctl status julak-bot.service
            read -n 1 -s -r -p "Tekan tombol apa saja untuk kembali..."
            ;;
        3)
            echo -e "\n${YELLOW}Me-restart layanan Bot Telegram...${NC}"
            systemctl restart julak-bot.service
            echo -e "${GREEN}Layanan Bot Telegram berhasil di-restart.${NC}"
            sleep 1
            read -n 1 -s -r -p "Tekan tombol apa saja untuk kembali..."
            ;;
        4)
            echo -e "\n${CYAN}Menu 'Setting' belum diimplementasikan.${NC}"
            sleep 1
            read -n 1 -s -r -p "Tekan tombol apa saja untuk kembali..."
            ;;
        5)
            echo -e "\n${CYAN}Menu 'Info VPS' belum diimplementasikan.${NC}"
            echo -e "${WH}Panel informasi sudah ditampilkan di atas.${NC}"
            sleep 1
            read -n 1 -s -r -p "Tekan tombol apa saja untuk kembali..."
            ;;
        0)
            echo -e "\n${RED}Keluar dari skrip...${NC}"
            exit 0
            ;;
        *)
            echo -e "\n${RED}Pilihan tidak valid! Silakan coba lagi.${NC}"
            sleep 1
            ;;
    esac
done
